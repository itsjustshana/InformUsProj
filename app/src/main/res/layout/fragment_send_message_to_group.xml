<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context="shan_shine.informus.SendMessageToGroup"
        android:background="@drawable/wood"
        android:padding="10dp">

        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/kl">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Group: "
                    android:id="@+id/textView13"
                    android:onClick="createNewGroup"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="GroupName"
                    android:id="@+id/label_GroupName"
                    android:onClick="createNewGroup"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView13"
                    android:layout_toEndOf="@+id/textView13"
                    android:layout_marginLeft="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Edit Group"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/label_GroupName"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="3dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Compose Message"
                    android:id="@+id/textView14"
                    android:layout_below="@+id/textView12"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="40dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/lbl_messageToSend"
                    android:layout_below="@+id/textView14"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:layout_alignRight="@+id/textView12"
                    android:layout_alignEnd="@+id/textView12"
                    android:gravity="top|left"
                    android:singleLine="false"
                    android:hint="Message..."
                    android:textAlignment="gravity"
                    android:background="#ffdbdbdb" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Message"
                    android:id="@+id/button_sendMessage"
                    android:clickable="true"
                    android:nestedScrollingEnabled="false"
                    android:background="#fff1f1f1"
                    android:layout_below="@+id/lbl_messageToSend"
                    android:layout_centerHorizontal="true"
                    android:elevation="3dp"
                    android:elegantTextHeight="true"
                    android:layout_marginTop="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Group"
                    android:id="@+id/button_delete_mygroup"
                    android:layout_marginBottom="39dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/lbl_messageToSend"
                    android:layout_alignEnd="@+id/lbl_messageToSend"
                    android:clickable="true" />

            </RelativeLayout>

        </RelativeLayout>

</FrameLayout>