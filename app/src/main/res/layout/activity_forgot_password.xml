
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="#0099cc"
    tools:context="shan_shine.informus.SignUpActivity"
    android:onClick="workClick">
    >

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:weightSum="1"
        android:id="@+id/outter"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:clickable="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff"
            android:layout_gravity="center"
            android:weightSum="1"
            android:id="@+id/bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:id="@+id/imgvwLogo"
                android:src="@drawable/inflogo3"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Forgot your Password?"
                android:id="@+id/lblForgotPassword"
                android:layout_marginLeft="5dp"
                style="@style/Base.TextAppearance.AppCompat.Caption" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@drawable/top2"
                android:layout_weight="0.90" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the email address registered with your Informus account."
            android:id="@+id/textView2"
            android:layout_marginTop="15dp"
            android:singleLine="false"
            android:layout_weight="0.06" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.39">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Email"
                android:id="@+id/textView3"
                android:layout_gravity="center"
                android:textColor="#ff000000"
                android:layout_above="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editText"
                android:editable="true"
                android:enabled="true"
                android:focusable="true"
                android:backgroundTint="#ffebeeec"
                android:inputType="textEmailAddress"
                android:layout_above="@+id/button"
                android:layout_alignLeft="@+id/button"
                android:layout_alignStart="@+id/button" />

            <Button
                style="@style/RtlOverlay.Widget.AppCompat.SearchView.MagIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Password Reset Email"
                android:id="@+id/button"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="62dp" >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@drawable/bottom2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</FrameLayout>
